<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="singletonPerson" class="ru.bukharov.training.spring.bean.Person">
        <property name="name" value="Singleton person" />
    </bean>

    <bean id="prototypePerson" class="ru.bukharov.training.spring.bean.Person" scope="prototype">
        <property name="name" value="Prototype person" />
    </bean>

</beans>